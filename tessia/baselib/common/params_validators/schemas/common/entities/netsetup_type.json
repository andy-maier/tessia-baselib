{
    "properties": {
        "cmdline": {
            "maxLength": 4096,
            "type": "string"
        },
        "device": {
            "maxLength": 14,
            "type": "string"
        },
        "dns": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "gateway": {
            "maxLength": 16,
            "type": "string"
        },
        "initrd_url": {
            "format": "uri",
            "type": "string"
        },
        "ip": {
            "maxLength": 16,
            "type": "string"
        },
        "kernel_url": {
            "format": "uri",
            "type": "string"
        },
        "mac": {
            "type": ["string", "null"],
            "pattern": "^([0-9A-Fa-f]{2}[:]){5}([0-9A-Fa-f]{2})$"
        },
        "mask": {
            "maxLength": 16,
            "type": "string"
        },
        "options": {
            "type": "object"
        },
        "password": {
            "type": "string"
        }
    },
    "required": [
        "mac",
        "ip",
        "mask",
        "gateway",
        "device",
        "password"
    ],
    "type": "object",
    "additionalProperties": false
}
